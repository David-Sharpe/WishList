= form_for @wishlist do |f|
  - if @wishlist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wishlist.errors.count, "error")} prohibited this wishlist from being saved:"
      %ul
        - @wishlist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user_id
  .field
    = f.label :count
    = f.number_field :count
    
  / - render 'wishlist_items/_form'
    
  .actions
    = f.submit 'Save'
    = link_to 'New item', new_wishlist_item_path(wishlist_id: @wishlist.id), class: 'button'
